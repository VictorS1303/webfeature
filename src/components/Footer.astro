<style>
    footer
    {
        position: relative;
        font-family: 'Archivo', sans-serif;
        display: flex;
        flex-direction: column;
        width: 100%;
        height: 400px;
        background-color: var(--footer-background-color);
        justify-content: center;
        align-items: center;
        text-align: center;
        color: var(--footer-text-color);
        border-top: 2px solid var(--border-color);
        margin-top: 40px;
    }

    footer div span:not(.divider)
    {
        font-size: 20px;
    }

    footer > div .divider
    {
        display: block;
        margin: 15px 0;
        font-size: 20px;
    }

    footer .socials
    {
        position: absolute;
        bottom: 20px;
        display: flex;
        justify-content: center;
        gap: 30px;
        width: 100%;
    }

    footer .socials i
    {
        color: var(--footer-text-color);
        cursor: pointer;
        transition: transform .15s ease-in;
    }

    footer .socials i:hover
    {
        transform: translateY(-5px);
        transition: transform .15s ease-in;
    }

    @media screen and (min-width: 768px)
    {
        footer
        {
            height: 130px;
            flex-direction: row;
        }

        footer span
        {
            margin: 0 20px;
        }

        footer .address
        {
            display: flex;
            flex-direction: row;
        }

        footer > div .divider
        {
            display: inline;
            margin: 0;
        }

        footer .socials
        {
            bottom: 10px;
        }
    }
</style>