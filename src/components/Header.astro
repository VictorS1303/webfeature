---
const {className, id} = Astro.props;
---

<header class={className} id={id}>
   <slot/>
</header>

<style>
    header
    {
        display: flex;
        flex-direction: column;
        justify-content: center;
    }
    
    header h1
    {
        text-align: center;
        border-bottom: 2px solid var(--border-color);
        font-size: 28px;
        margin-bottom: 20px;
    }
</style>