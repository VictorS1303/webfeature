---
import Section from "./Section.astro";
import Overlay from "./Overlay.astro";
// import PlayButton from "./PlayButton.astro";
import VideoControls from "./VideoControls.astro";
import Video from "./Video.astro";
import Header from "./Header.astro";
---

<Section className="interview" id="interview">
    <Header className="interview-header" id="interview_header">
        <h1>LIVET SOM FRIVILLIG</h1>
        <p>
            Hvordan er livet som frivillig i GirlTalk?
            Få et dybere indblik i videoen herunder og se, om det skulle være noget for dig.
        </p>
    </Header>

    <div class="container video-container">
        <div class="wrapper video-wrapper">
            <Video src="../../public/videos/placeholder_video.mp4" id="video" />
            <VideoControls />
        </div>
    </div>
</Section>


<style>
        
    @media screen and (min-width: 768px)
    {

        header h1
        {
            /* font-size: 60px; */
        }

        header p
        {
            width: 660px;
            position: relative;
            left: 50%;
            transform: translateX(-50%);
            font-size: 35px;
        }

        .container.video-container
        {
            position: relative;
            margin-top: 80px;
        }

        .container.video-container video
        {
            width: 100%;
        }
    }
    .wrapper.video-wrapper
    {
        position: relative;
        overflow: hidden;
    }
   

</style>